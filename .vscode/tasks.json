{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/dist/${fileBasenameNoExtension}",
				"-lm"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc"
		},
		{
			"type": "cppbuild",
			"label": "Build directory",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"*.c",
				"-o",
				"${workspaceFolder}/dist/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}